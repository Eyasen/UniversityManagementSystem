@model IEnumerable<UniversityManagementSystem.Student>

@{
    ViewBag.Title = "Students";
}

<h2>Students</h2>

<p>
    @Html.ActionLink("Add new Student information", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FathersName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MothersName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentMobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentAge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentGender)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FathersName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MothersName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentMobile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentAge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentGender)
        </td>
        <td>
            <button class="btn btn-info">@Html.ActionLink("Edit", "Edit", new { id = item.StudentId }, new { style = "color: white;" })</button>
            <button class=" btn btn-primary"> @Html.ActionLink("Details", "Details", new { id = item.StudentId }, new { style = "color: white;" }) </button>
            <button class="btn btn-warning"> @Html.ActionLink("Delete", "Delete", new { id = item.StudentId }, new { style = "color: white;" })</button>
        </td>>
    </tr>
}

</table>
